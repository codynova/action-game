{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "Actions": [ "actions" ],
            "Assets": [ "assets" ],
            "Constants": [ "constants" ],
            "Contexts": [ "contexts" ],
            "Components": [ "components" ],
            "Data": [ "data" ],
            "Hooks": [ "hooks" ],
            "Routes": [ "routes" ],
            "Services": [ "services" ],
            "Shaders": [ "shaders" ],
            "Styles": [ "styles" ],
            "Types": [ "types" ]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": true,
        "sourceMap": true,
        "skipLibCheck": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
